@model AzureMediaPortal.Models.Post

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<nav>
    <ul id="menu" style="float:right;">
        <section id="login">
            @Html.Partial("_LoginPartial")
        </section>
        <li>@Html.ActionLink("Public Videos", "PublicVideos", "Media")</li>
        <li>@Html.ActionLink("My Videos", "Index", "Media")</li>
        @*<li>@Html.ActionLink("Comments", "Index", "Comments")</li>*@
        <li>@Html.ActionLink("About", "Index", "Home")</li><!--Home Controller-->
    </ul>
</nav>
<br>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Post</legend>

        @Html.HiddenFor(model => model.PostID)

        <div class="editor-label">
            @Html.LabelFor(model => model.VideoTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VideoTitle)
            @Html.ValidationMessageFor(model => model.VideoTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserID)
        </div>
        <div>
            @Html.TextBoxFor(model => model.UserID, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.UserID) <i>*Non-editable</i>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MessageBody)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MessageBody)
            @Html.ValidationMessageFor(model => model.MessageBody)
        </div>
        

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
